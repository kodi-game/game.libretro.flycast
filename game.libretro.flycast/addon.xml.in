<?xml version="1.0" encoding="UTF-8"?>
<addon id="game.libretro.flycast"
		name="Sega - Dreamcast/NAOMI (Flycast)"
		version="0.1.0.19"
		provider-name="flyinghead">
	<requires>
		<import addon="game.libretro" version="1.0.0"/>
		<import addon="game.controller.dreamcast" version="1.0.0"/>
	</requires>
	<extension point="kodi.gameclient"
			library_@PLATFORM@="@LIBRARY_FILENAME@">
		<platforms>Dreamcast</platforms>
		<extensions>chd|cdi|iso|elf|cue|gdi|lst|bin|dat|zip|7z|m3u</extensions>
		<supports_vfs>false</supports_vfs>
		<supports_standalone>false</supports_standalone>
	</extension>
	<extension point="xbmc.addon.metadata">
		<summary lang="en_GB">Sega - Dreamcast/NAOMI (Flycast) 0.1</summary>
		<description lang="en_GB">Reicast is a multiplatform Sega Dreamcast emulator (http://reicast.com).

Supported files: chd, cdi, iso, elf, bin, cue, gdi</description>
		<disclaimer>The Reicast team is not connected or affiliated with any mentioned company in any way. The opinions of the Reicast team do not reflect the views of the various companies mentioned here. Companies and all products pertaining to that company are trademarks of that company. Please contact that company for trademark and copyright information.</disclaimer>
		<license>GPLv2</license>
		<platform>@PLATFORM@</platform>
		<source>https://github.com/kodi-game/game.libretro.flycast</source>
		<assets>
			<icon>resources/icon.png</icon>
		</assets>
	</extension>
</addon>
